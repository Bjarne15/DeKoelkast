<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DeKoelkast.Pages.SettingsPage"
             Title="SettingsPage">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <!-- Er moet moeten nog de gegevens van de ingelogde gebruiker getoond worden.-->

            <Button Text="Profiel bijwerken" BackgroundColor="#5F9EA0" TextColor="Black" />
            <Button Text="Profiel verwijderen" BackgroundColor="#5F9EA0" TextColor="Black" />

            <Button Text="Uitloggen" BackgroundColor="#5F9EA0" TextColor="Black" Clicked="OnLogoutClicked" />
            <Button Text="Terug naar koelkast keuze" Clicked="OnBackToFridgeSelectionClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>