<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DeKoelkast.Pages.FridgeSelectionPage"
             Title="FridgeSelectionPage">
    <VerticalStackLayout>
        <Label Text="Kies een koelkast waarvan je wilt drinken." FontSize="Large" HorizontalOptions="Center" ></Label>
        <ListView ItemsSource="{Binding Fridges}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}" Detail="{Binding Location}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </VerticalStackLayout>
</ContentPage>