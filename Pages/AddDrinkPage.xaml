<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DeKoelkast.Pages.AddDrinkPage"
             Title="Drank toevoegen">
    <StackLayout Padding="20">
        <Label Text="Drank toevoegen"
               FontSize="24"
               HorizontalOptions="Center" />
        <Entry x:Name="DrinkNameEntry"
               Placeholder="Naam van de drank"
               Margin="0,20,0,0" />
        <Entry x:Name="DrinkPriceEntry"
               Placeholder="Prijs"
               Keyboard="Numeric"
               Margin="0,10,0,0" />
        <Entry x:Name="DrinkQuantityEntry"
               Placeholder="Hoeveelheid flessen"
               Keyboard="Numeric"
               Margin="0,10,0,0" />
        <Button Text="Accepteren"
                HorizontalOptions="FillAndExpand"
                WidthRequest="250"
                Margin="0,20,0,0"
                Clicked="OnAcceptButtonClicked" />
    </StackLayout>
</ContentPage>