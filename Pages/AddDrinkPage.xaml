<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DeKoelkast.Pages.AddDrinkPage"
             Title="Drank toevoegen">
    <VerticalStackLayout Padding="20">
        <Picker Title="Selecteer een drank" ItemsSource="{Binding Drinks}" x:Name="DrinkPicker"/>
        <Entry Placeholder="Aantal flessen" Keyboard="Numeric" x:Name="QuantityEntry"/>
        <Entry Placeholder="Prijs per fles" Keyboard="Numeric" x:Name="PriceEntry"/>
        <Button Text="Toevoegen" Clicked="OnAddClicked"/>
    </VerticalStackLayout>
</ContentPage>